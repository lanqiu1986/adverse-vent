<div class="col-md-12">
  <div class="event">
    <%= link_to("New event", new_event_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Department</td>
        <td>Title</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td>#</td>
          <td><%= event.department %></td>
          <td><%= link_to(event.title, event_path(event)) %></td>
          <td><%= event.description %></td>
          <td>
              <%= link_to("Edit", edit_event_path(event), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", event_path(event),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
